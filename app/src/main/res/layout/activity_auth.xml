<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#fcfcfc"
    >

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/bg_login"
        android:layout_marginTop="151dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        >

        <Button
            android:id="@+id/googleBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="74dp"
            android:letterSpacing="0.02"
            android:text="Войти с помощью почты"
            android:textColor="#2e7d32"
            android:textSize="15sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/SkipBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:letterSpacing="0.02"
            android:text="Пропустить"
            android:textColor="@color/skipButton"
            android:textSize="15sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/logotype_login"
            android:layout_marginTop="43dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ProgressBar
            android:id="@+id/progressBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/googleBtn"
            android:layout_alignLeft="@+id/googleBtn"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/googleBtn"
            android:layout_alignStart="@+id/googleBtn"
            android:layout_alignTop="@+id/googleBtn"
            android:layout_marginBottom="28dp"
            android:visibility="invisible" />
    </RelativeLayout>



</RelativeLayout>
